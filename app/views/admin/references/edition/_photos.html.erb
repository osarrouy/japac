<%= link_to_remote 'Annuler', :url => photos_admin_reference_path(@attachable, :js),
	:method => :get, :update => 'photos', :html => { :class => 'top_links' } %>

<h3>Photos</h3>

<%= render :partial => 'admin/separators/separator_thick' %>

<div class="form">
	<% form_for [:admin, @attachable, Photo.new], 
		:html => { :target => 'frame', :multipart => true } do |f| -%>

		<% unless @photo.errors.empty? %>
			<div class="form-errors">
				Il existe des erreurs dans le formulaire :
				<ul>
				<% @photo.errors.each do |attribut, message| %>
					<li><%= message -%></li>
				<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-entries">
			<p><%= f.label :uploaded_data, 'Image :' %><%= f.file_field :uploaded_data %></p>
		</div>
		
		<div class="form-buttons">
			<p><%= f.submit "Enregistrer" -%></p>
		</div>

	<% end %>

</div>