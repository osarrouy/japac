<%= link_to_remote 'Annuler', :url => generic_admin_reference_path(@reference, :js),
		:method => :get, :update => 'generic', :html => { :class => 'top_links' } %>

<h3>Informations génériques</h3>

<%= render :partial => 'admin/separators/separator_thick' %>

<div class="form">
	
	<% remote_form_for [:admin, @reference], :url => update_generic_admin_reference_path(@reference, :js),
		:html => { :method => :put }, :update => 'generic' do |f| %>

		<% unless @reference.errors.empty? %>
			<div class="form-errors">
				Il existe des erreurs dans le formulaire :
				<ul>
					<% @reference.errors.each do |attribut, message| %>
						<li><%= message -%></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-entries">
			<p><%= f.label :name, 'Nom :' -%><%= f.text_field :name -%></p>
			<p><%= f.label :size, 'Taille :' -%><%= f.text_field :size -%></p>
		</div>

		<div class="form-buttons">
			<p><%= f.submit "Enregistrer" %></p>
		</div>
	
	<% end %>

</div>
